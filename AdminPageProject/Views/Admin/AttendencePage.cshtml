@model IEnumerable<AttendencePageModel>
@{
    Layout = null; // Assuming this is a standalone page, remove this if using a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Custom styling with the provided color palette */
        body {
            background-color: #BFD7ED; /* Light blue background */
        }

        .attendance-table {
            background-color: #EDE7F6;
            border-radius: 8px;
            padding: 20px;
            border: 2px solid #60A3D9;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        .show-file {
            cursor: pointer;
            color: #003B73;
            text-decoration: underline;
        }

        .table-body {
            background-color: white;
        }

        .table-bordered {
            border: 2px solid #60A3D9;
        }

        .table-light {
            background-color: #60A3D9; /* Light blue header background */
            color: white;
        }

        .btn-primary {
            background-color: #0074B7; /* Primary button color */
            border-color: #0074B7;
        }

        .btn-primary:hover {
            background-color: #003B73; /* Dark blue on hover */
            border-color: #003B73;
        }

        .btn-custom {
            background-color: #0074B7;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
        }

        .btn-custom:hover {
            background-color: #003B73;
        }

        h3 {
            color: #003B73;
        }

        @@media(max-width: 500px) {
            .table-responsive {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <a href="@Url.Action("AdminPage","Admin")" class="btn btn-primary mb-2 mr-2">Back</a>

                <div class="attendance-table p-4 shadow">
                    <h3 class="text-center text-uppercase mb-4">Allotted Work</h3>
                    <div class="table-responsive" style="text-align:center">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Id</th>
                                    <th>EngineerId</th>
                                    <th>AT Engineer</th>
                                    <th>Department</th>
                                    <th>Location</th>
                                    <th>Village</th>
                                    <th>Mandal</th>
                                    <th>District</th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sec in Model)
                                    {
                                        <tr>
                                            <td>@sec.Id</td>
                                            <td>@sec.EngineerId</td>
                                            <td>@sec.Name</td>
                                            <td>@sec.Department</td>
                                            <td>@sec.Location</td>
                                            <td>@sec.Village</td>
                                            <td>@sec.Mandal</td>
                                            <td>@sec.District</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <a href="@Url.Action("ATEngineersAttendencePage", "ATEngineersAttendencePage")" class="btn btn-custom mt-3">ATEngineers Attendance</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional but needed if you want interactive elements like modals) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
