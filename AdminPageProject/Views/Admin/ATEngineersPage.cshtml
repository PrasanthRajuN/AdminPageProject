@{
    ViewData["Title"] = "ATEngineer Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Add Bootstrap for styling and Font Awesome for icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        body {
            background-color: #1f1f2e; /* Dark professional background */
            color: #ffffff;
        }

        .atengineer-page {
            text-align: center;
            margin-top: 50px;
        }

        h1 {
            font-size: 2.5rem;
            color: #ffffff;
            margin-bottom: 45px;
        }

        .card-custom {
            background-color: #29294a; /* Card background color */
            color: #ffffff;
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 220px;
            text-align: center;
            padding: 20px;
            margin: 20px;
        }

        .card-custom:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
        }

        .card-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #5a5aff; /* Icon color */
        }

        /* Back button styling */
        .btn-back {
            position: absolute;
            left: 20px;
            top: 20px;
            color: #ffffff;
            border-color: #ffffff;
            font-size: 1rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 500px) {
            .card-deck {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
<body>

<div class="atengineer-page">
    <a href="@Url.Action("Index", "Login")" class="btn btn-outline-light btn-back"><i class="fas fa-arrow-left"></i> Back</a>
    
    <!-- Heading -->
    <h1>ATEngineer Page</h1>

    <!-- Card container with cards as buttons -->
    <div class="d-flex justify-content-center flex-wrap">
        <!-- Card for Show Work -->
        <a href="@Url.Action("ShowWork", "Admin")" class="card card-custom text-decoration-none">
            <div class="card-body">
                <i class="fas fa-clipboard-list card-icon"></i>
                <h5 class="card-title">Show Work</h5>
            </div>
        </a>

        <!-- Card for Records -->
        <a href="@Url.Action("Records", "Admin")" class="card card-custom text-decoration-none">
            <div class="card-body">
                <i class="fas fa-file-alt card-icon"></i>
                <h5 class="card-title">Records</h5>
            </div>
        </a>
    </div>
</div>

<!-- Bootstrap and Font Awesome JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
